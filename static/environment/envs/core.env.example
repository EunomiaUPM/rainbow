VAULT_ADDR=https://127.0.0.1:8200
VAULT_TOKEN=COMPLETAR
VAULT_SKIP_VERIFY=false

# CA que firm√≥ el cert del servidor Vault
VAULT_CACERT=/vault/consumer/config/vault-ca.pem

# Cert cliente 
VAULT_CLIENT_CERT=/vault/consumer/config/vault-cert.pem
VAULT_CLIENT_KEY=/vault/consumer/config/vault-key.pem

# -------------------------------------------------
# Path to secrets
